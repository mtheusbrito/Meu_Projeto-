<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_margin="20dp"
        android:layout_weight="0.79"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Nova Coleta "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_litros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Matricula"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/edit_mat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_litros"
                android:inputType="number" />

            <TextView
                android:id="@+id/text_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_local"
                android:text="produtor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />

            <EditText
                android:inputType="text"
                android:id="@+id/edit_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_prod"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_prod"
                android:text="Litros Da Coleta"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />

            <EditText

                android:id="@+id/edit_litros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_litros"
                android:layout_gravity="right|center"
                android:inputType="number" />

            <TextView
                android:id="@+id/text_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mat"
                android:text="Qualidade do Leite"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinnerColeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:entries="@array/spinerColeta"></Spinner>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mat"
                android:text="Alizarol +"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinnerAlizarol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:entries="@array/spinerAlizarol"></Spinner>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Salvar" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.42"
                android:format24Hour="MMM dd, k:mm"
                android:textSize="0dp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>