<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <EditText
        android:id="@+id/editUpdateNomeRota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rota" />
    <EditText
        android:id="@+id/editUpdateCarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacidade" />

    <Spinner
        android:id="@+id/spinnerUpdateRota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUpdateCarga"
        android:entries="@array/spinerRota"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />

        <Button
            android:id="@+id/buttonDeleteArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

    </LinearLayout>


</LinearLayout>