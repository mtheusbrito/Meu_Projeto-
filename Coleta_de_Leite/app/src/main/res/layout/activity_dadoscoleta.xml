<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1">




            <LinearLayout
                android:layout_margin="20dp"
                android:background="#ffff"
                android:layout_gravity=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">



                <TextView

                    android:layout_centerHorizontal="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Dados da Coleta "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_prod"
                    android:text=""
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                     />
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_margin="10dp"
                        android:background="@drawable/matricula"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                <android.support.v7.widget.CardView
                    card_view:elevation="20dp"
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="273dp"
                    android:layout_height="45dp"
                    card_view:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_gravity=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="252dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/toolbar_main"
                            android:layout_marginTop="5dp"
                            android:text="   MATRICULA"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_15sp"

                            />

                        <TextView
                            android:layout_gravity="center"
                            android:textSize="@dimen/txt_15sp"
                            android:id="@+id/exib_mat"
                            android:layout_width="230dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/prod"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


                    <android.support.v7.widget.CardView
                        card_view:elevation="20dp"
                        android:background="@color/background"
                        android:foregroundGravity="right"
                        card_view:cardElevation="20dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_width="273dp"
                        android:layout_height="45dp"
                        card_view:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_gravity=""
                        android:layout_width="276dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_mat"
                            android:text="   PRODUTOR"
                            />

                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_prod"
                    android:layout_width="230dp"
                    android:layout_height="match_parent" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/milk"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />



                <android.support.v7.widget.CardView
                    card_view:elevation="20dp"
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="273dp"
                    android:layout_height="45dp"
                    card_view:cardCornerRadius="4dp">
                    <LinearLayout
                        android:layout_gravity=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:text="   LITROS COLETADOS"
                        android:textSize="@dimen/txt_15sp" />

                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_Litros"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">


                    <ImageView
                        android:layout_margin="10dp"
                        android:background="@drawable/temperatura"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <android.support.v7.widget.CardView
                        card_view:elevation="20dp"
                        android:background="@color/background"
                        android:foregroundGravity="right"
                        card_view:cardElevation="20dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_width="273dp"
                        android:layout_height="45dp"
                        card_view:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_gravity=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView

                                android:textColor="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/edit_prod"
                                android:text="   TEMPERATURA"
                                android:textSize="@dimen/txt_15sp"/>
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="@dimen/txt_15sp"
                                android:id="@+id/exib_temperatura"
                                android:layout_width="262dp"
                                android:layout_height="wrap_content"/>




                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/qualidade"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <android.support.v7.widget.CardView
                    card_view:elevation="20dp"
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="273dp"
                    android:layout_height="45dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_gravity=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView

                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_prod"
                        android:text="   ALIZAROL"
                        android:textSize="@dimen/txt_15sp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="@dimen/txt_15sp"
                        android:id="@+id/exib_alizarol"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"/>





                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:background="#757575"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </LinearLayout>
        <Button
            android:id="@+id/button_updatedelete"
            android:textAllCaps="true"
            android:text="Alterar/Remover Registro"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_width="172dp"
            android:layout_height="42dp" />


            </LinearLayout>


</LinearLayout>

