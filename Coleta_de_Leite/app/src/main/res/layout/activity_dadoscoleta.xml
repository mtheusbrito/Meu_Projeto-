<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:foregroundGravity="right"
            card_view:cardElevation="20dp"
            android:layout_margin="10dp"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:background="@color/background"
                android:layout_gravity=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView

                    android:layout_centerHorizontal="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Dados da Coleta "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/coletacadastro"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_prod"
                    android:text=""
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                     />

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/dados_mat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_main"
                    android:layout_marginTop="20dp"
                    android:text="   MATRICULA"

                />


                <android.support.v7.widget.CardView
                    card_view:elevation="20dp"
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    card_view:cardCornerRadius="4dp">


                    <TextView
                        android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_mat"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_mat"
                    android:text="   PRODUTOR"
                    />
                <android.support.v7.widget.CardView
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    card_view:cardCornerRadius="4dp">

                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_prod"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   LITROS COLETADOS"
                    android:textSize="@dimen/txt_15sp" />
                <android.support.v7.widget.CardView
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    card_view:cardCornerRadius="4dp">

                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_Litros"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


                <TextView

                    android:id="@+id/text_litros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_prod"
                    android:text="   QUALIDADE"
                    android:textSize="@dimen/txt_15sp"/>
                <android.support.v7.widget.CardView
                    android:background="@color/background"
                    android:foregroundGravity="right"
                    card_view:cardElevation="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    card_view:cardCornerRadius="4dp">

                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_15sp"
                    android:id="@+id/exib_qualidade"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>
                </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>


</LinearLayout>

